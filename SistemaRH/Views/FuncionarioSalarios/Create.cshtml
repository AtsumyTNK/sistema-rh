@model SistemaRH.Models.FuncionarioSalario

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Salário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select class="form-control" asp-for="IdFuncionario" asp-items="@ViewBag.Funcionarios"></select>
            </div>
            <div class="form-group">
                <label asp-for="Salario" class="control-label"></label>
                <input asp-for="Salario" type="number" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VigenteEm" class="control-label"></label>
                <input asp-for="VigenteEm" type="date" class="form-control" />
                <span asp-validation-for="VigenteEm" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">De volta à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

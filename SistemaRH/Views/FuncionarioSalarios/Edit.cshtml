@model SistemaRH.Models.FuncionarioSalario

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Salário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdFuncionario" />
            <div class="form-group">
                <label asp-for="Salario" class="control-label"></label>
                <input asp-for="Salario" type="number" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VigenteEm" class="control-label"></label>
                <input asp-for="VigenteEm" class="form-control" />
                <span asp-validation-for="VigenteEm" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">De volta à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

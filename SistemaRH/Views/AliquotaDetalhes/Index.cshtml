@model IEnumerable<SistemaRH.AliquotaDetalhe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aliquota.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseCalculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Porcentagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Aliquota.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseCalculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Porcentagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhe</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

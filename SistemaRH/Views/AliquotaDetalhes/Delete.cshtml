@model SistemaRH.AliquotaDetalhe

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Você tem certeza?</h3>
<div>
    <h4>Detalhe da alíquota</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdAliquota)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdAliquota)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BaseCalculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BaseCalculo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Porcentagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Porcentagem)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">De volta à lista</a>
    </form>
</div>
